{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning",
        "Orleans": "Warning",
        "Runtime": "Warning",
        "Messaging": "Warning",
        "Manticore.WebApi.Middleware.AuthTokenHandler": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithExceptionDetails"
    ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "formatter": "Serilog.Sinks.Network.Formatters.LogstashJsonFormatter,Serilog.Sinks.Network"
              }
            }
          ],
          "blockWhenFull": true
        }
      }
    ]
  }
}
